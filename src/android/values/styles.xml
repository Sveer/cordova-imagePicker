<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ImagePickerTheme" parent="ef_BaseTheme">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
        <item name="colorPrimary">@color/ef_white</item>
        <item name="colorPrimaryDark">@color/ef_white</item>
        <item name="colorAccent">@color/accentText</item>
    </style>

    <style name="ef_BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ef_AppTheme" parent="ef_AppTheme">
        <item name="colorPrimary">@color/ef_white</item>
        <item name="colorPrimaryDark">@color/ef_grey</item>
        <item name="colorAccent">@color/ef_white</item>
    </style>

    <style name="ef_CustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>
    </style>

</resources>
